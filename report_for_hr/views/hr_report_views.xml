<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- HR Daily Report Line List View -->
    <record id="view_hr_daily_report_line_list" model="ir.ui.view">
        <field name="name">hr.daily.report.line.list</field>
        <field name="model">hr.daily.report.line</field>
        <field name="arch" type="xml">
            <list string="Xodimlar" create="0" delete="0">
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="work_phone"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- HR Daily Report Dashboard Form View -->
    <record id="view_hr_daily_report_form" model="ir.ui.view">
        <field name="name">hr.daily.report.form</field>
        <field name="model">hr.daily.report</field>
        <field name="arch" type="xml">
            <form string="HR Dashboard" create="0">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="report_date" widget="date"/>
                        </h1>
                    </div>
                    
                    <!-- Clickable Statistics Cards -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_all" type="object" class="oe_stat_button" icon="fa-users">
                            <field name="total_employees" string="Jami xodimlar" widget="statinfo"/>
                        </button>
                        <button name="action_view_present" type="object" class="oe_stat_button" icon="fa-check-circle">
                            <field name="present_count" string="Kelganlar" widget="statinfo"/>
                        </button>
                        <button name="action_view_absent" type="object" class="oe_stat_button" icon="fa-times-circle">
                            <field name="absent_count" string="Kelmaganlar" widget="statinfo"/>
                        </button>
                        <button name="action_view_on_leave" type="object" class="oe_stat_button" icon="fa-calendar">
                            <field name="on_leave_count" string="Ta'tildagilar" widget="statinfo"/>
                        </button>
                    </div>
                    
                    <!-- Employee Lists in Tabs -->
                    <notebook>
                        <page string="Kelmaganlar" name="absent">
                            <field name="absent_employee_ids" readonly="1" nolabel="1">
                                <list string="Kelmagan xodimlar" create="0" delete="0">
                                    <field name="name"/>
                                    <field name="department_id"/>
                                    <field name="job_id"/>
                                    <field name="work_phone"/>
                                </list>
                            </field>
                        </page>
                        <page string="Ta'tildagilar" name="on_leave">
                            <field name="leave_ids" readonly="1" nolabel="1">
                                <list string="Ta'tildagi xodimlar" create="0" delete="0">
                                    <field name="employee_id"/>
                                    <field name="holiday_status_id" string="Sabab"/>
                                    <field name="date_from" string="Boshlanishi"/>
                                    <field name="date_to" string="Tugashi"/>
                                    <field name="number_of_days" string="Kunlar"/>
                                </list>
                            </field>
                        </page>
                        <page string="Kelganlar" name="present">
                            <field name="present_employee_ids" readonly="1" nolabel="1">
                                <list string="Kelgan xodimlar" create="0" delete="0">
                                    <field name="name"/>
                                    <field name="department_id"/>
                                    <field name="job_id"/>
                                    <field name="work_phone"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- HR Daily Report List View -->
    <record id="view_hr_daily_report_list" model="ir.ui.view">
        <field name="name">hr.daily.report.list</field>
        <field name="model">hr.daily.report</field>
        <field name="arch" type="xml">
            <list string="HR Daily Reports">
                <field name="report_date"/>
                <field name="total_employees"/>
                <field name="present_count"/>
                <field name="absent_count"/>
                <field name="on_leave_count"/>
            </list>
        </field>
    </record>

    <!-- Action for Today's Dashboard -->
    <record id="action_hr_daily_report_today" model="ir.actions.server">
        <field name="name">Bugungi Hisobot</field>
        <field name="model_id" ref="model_hr_daily_report"/>
        <field name="state">code</field>
        <field name="code">action = model.get_today_dashboard()</field>
    </record>

    <!-- Action for All Daily Reports -->
    <record id="action_hr_daily_report_all" model="ir.actions.act_window">
        <field name="name">Kunlik Hisobotlar</field>
        <field name="res_model">hr.daily.report</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- HR Report Analysis Form View -->
    <record id="view_hr_report_analysis_form" model="ir.ui.view">
        <field name="name">hr.report.analysis.form</field>
        <field name="model">hr.report.analysis</field>
        <field name="arch" type="xml">
            <form string="HR Report">
                <header>
                    <button name="action_generate_report" 
                            string="Generate Report" 
                            type="object" 
                            class="btn-primary"
                            invisible="state == 'generated'"/>
                    <button name="action_print_report" 
                            string="Print Report" 
                            type="object" 
                            class="btn-secondary"
                            invisible="state != 'generated'"/>
                    <button name="action_reset_to_draft" 
                            string="Reset to Draft" 
                            type="object"
                            invisible="state != 'generated'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generated"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Report Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="report_type"/>
                        </group>
                        <group>
                            <field name="department_id"/>
                            <field name="employee_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group string="Statistics" invisible="state != 'generated'">
                        <group>
                            <field name="total_employees"/>
                            <field name="total_worked_hours" widget="float_time"/>
                        </group>
                        <group>
                            <field name="total_leave_days"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes" placeholder="Add notes here..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- HR Report Analysis List View -->
    <record id="view_hr_report_analysis_list" model="ir.ui.view">
        <field name="name">hr.report.analysis.list</field>
        <field name="model">hr.report.analysis</field>
        <field name="arch" type="xml">
            <list string="HR Reports">
                <field name="name"/>
                <field name="date"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="report_type"/>
                <field name="total_employees"/>
                <field name="total_worked_hours" widget="float_time"/>
                <field name="total_leave_days"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- HR Report Wizard Form View -->
    <record id="view_hr_report_wizard_form" model="ir.ui.view">
        <field name="name">hr.report.wizard.form</field>
        <field name="model">hr.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate HR Report">
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="report_type"/>
                    </group>
                    <group>
                        <field name="department_id"/>
                        <field name="employee_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <footer>
                    <button name="action_generate_report" 
                            string="Generate Report" 
                            type="object" 
                            class="btn-primary"/>
                    <button name="action_print_direct" 
                            string="Print Directly" 
                            type="object" 
                            class="btn-secondary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for HR Report Analysis -->
    <record id="action_hr_report_analysis" model="ir.actions.act_window">
        <field name="name">HR Reports</field>
        <field name="res_model">hr.report.analysis</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first HR Report
            </p>
        </field>
    </record>

    <!-- Action for Report Wizard -->
    <record id="action_hr_report_wizard" model="ir.actions.act_window">
        <field name="name">Quick Report</field>
        <field name="res_model">hr.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
