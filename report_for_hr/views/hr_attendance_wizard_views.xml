<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Attendance Wizard Form View -->
    <record id="view_hr_attendance_wizard_form" model="ir.ui.view">
        <field name="name">hr.attendance.wizard.form</field>
        <field name="model">hr.attendance.wizard</field>
        <field name="arch" type="xml">
            <form string="Attendance yaratish">
                <group>
                    <field name="employee_ids" widget="many2many_tags" readonly="1"/>
                    <field name="attendance_date"/>
                </group>
                <group>
                    <group>
                        <field name="check_in_time" widget="float_time"/>
                    </group>
                    <group>
                        <field name="check_out_time" widget="float_time"/>
                    </group>
                </group>
                <footer>
                    <button name="action_create_attendance" 
                            string="Attendance yaratish" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Bekor qilish" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open wizard -->
    <record id="action_hr_attendance_wizard" model="ir.actions.act_window">
        <field name="name">Attendance yaratish</field>
        <field name="res_model">hr.attendance.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
        <field name="binding_view_types">list</field>
    </record>

</odoo>
