<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hikvision_log_tree" model="ir.ui.view">
        <field name="name">hikvision.log.tree</field>
        <field name="model">hikvision.log</field>
        <field name="arch" type="xml">
            <list string="Attendance Logs" create="false" edit="false">
                <field name="timestamp"/>
                <field name="device_id"/>
                <field name="employee_id"/>
                <field name="attendance_type"/>
            </list>
        </field>
    </record>

    <record id="view_hikvision_log_form" model="ir.ui.view">
        <field name="name">hikvision.log.form</field>
        <field name="model">hikvision.log</field>
        <field name="arch" type="xml">
            <form string="Attendance Log" create="false" edit="false">
                <sheet>
                    <group>
                        <group>
                            <field name="device_id"/>
                            <field name="employee_id"/>
                            <field name="timestamp"/>
                            <field name="attendance_type"/>
                        </group>
                        <group>
                            <field name="image" widget="image" options="{'size': [150, 150]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hikvision_log" model="ir.actions.act_window">
        <field name="name">Attendance Logs</field>
        <field name="res_model">hikvision.log</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
